<% content_for :title, "Editing post" %>
<div class="max-w-2xl mx-auto">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Edit Post</h1>
    <%= render "form", post: @post %>
    <div class="mt-6 flex space-x-4">
        <%= link_to "Show this post", @post, class: "text-blue-600 hover:text-blue-800 font-medium" %>
        <%= link_to "Back to posts", posts_path, class: "text-gray-600 hover:text-gray-800 font-medium" %>
    </div>
</div>