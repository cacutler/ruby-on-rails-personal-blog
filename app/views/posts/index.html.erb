<p style="color: green"><%= notice %></p>
<% content_for :title, "Posts" %>
<div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold text-gray-900 mb-8 text-center">My Personal Blog</h1>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
        <% @posts.each do |post| %>
        <%= render post %>
        <% end %>
    </div>
    <div class="text-center mt-8">
        <%= link_to "New post", new_post_path, class: "inline-block bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
</div>